<UserControl x:Class="MethodTrackerVisualizer.TrackerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             xmlns:stepByStepLogger="clr-namespace:StepByStepLogger"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <UserControl.Resources>

        <stepByStepLogger:ListToStringConverter x:Key="ListToStringConverter"/>
        <Style TargetType="TreeViewItem">
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="BorderThickness" Value="0" />
            <EventSetter Event="Selected" Handler="TreeViewItem_Selected" />
        </Style>

        <HierarchicalDataTemplate DataType="{x:Type stepByStepLogger:LogEntry}" ItemsSource="{Binding Children}">
            <Border BorderThickness="1" BorderBrush="Gray" Padding="5" Margin="2">
                <StackPanel>
                    <TextBlock Text="{Binding MethodName}" FontWeight="Bold" />
                    <TextBlock>
                        <Run Text="Parameters: "  FontWeight="Bold" />
                        <Run Text="{Binding Parameters, Converter={StaticResource ListToStringConverter}}" />
                    </TextBlock>
                    <TextBlock>
                        <Run Text="Return Type: "  FontWeight="Bold" />
                        <Run Text="{Binding ReturnType}" />
                    </TextBlock>
                    <TextBlock>
                        <Run Text="Return Value: "  FontWeight="Bold" />
                        <Run Text="{Binding ReturnValue}" />
                    </TextBlock>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Start: " FontWeight="Bold" />
                        <TextBlock Text="{Binding StartTime}" Margin="2,0,5,0"/>
                        <TextBlock Text="End: " FontWeight="Bold" />
                        <TextBlock Text="{Binding EndTime}" Margin="2,0,5,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Elapsed: " FontWeight="Bold" />
                        <TextBlock Text="{Binding ElapsedTime}" Margin="2,0,5,0"/>
                        <TextBlock Text="Exclusive: " FontWeight="Bold" />
                        <TextBlock Text="{Binding ExclusiveElapsedTime}" Margin="2,0,5,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </HierarchicalDataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Search bar row -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="5">
            <TextBox x:Name="SearchTextBox" Width="200" Margin="0,0,5,0" 
                     VerticalAlignment="Center" />
            <Button Content="Search" Click="SearchButton_Click" VerticalAlignment="Center" />
            <Button Content="Clear" Click="ClearButton_Click" Margin="5,0,0,0" VerticalAlignment="Center" />
        </StackPanel>
        <!-- Log tree view row -->
        <TreeView x:Name="LogTreeView" Grid.Row="1" Margin="5" />
    </Grid>
</UserControl>