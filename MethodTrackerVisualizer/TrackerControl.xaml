<UserControl x:Class="MethodTrackerVisualizer.TrackerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             xmlns:stepByStepLogger="clr-namespace:StepByStepLogger"
             Background="Black"
             Foreground="White"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <UserControl.Resources>
        <stepByStepLogger:ListToStringConverter x:Key="ListToStringConverter"/>
        <Style TargetType="TreeViewItem">
            <EventSetter Event="Selected" Handler="TreeViewItem_Selected" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
        </Style>
        <HierarchicalDataTemplate DataType="{x:Type stepByStepLogger:LogEntry}" ItemsSource="{Binding Children}">
            <Border Padding="0" Margin="0" CornerRadius="10" BorderThickness="4">
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FFDADADA" Offset="0"/>
                        <GradientStop Color="#FF707070" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <StackPanel Background="LightSteelBlue">
                    <TextBlock Text="{Binding MethodName}" FontWeight="Bold" FontSize="14" />
                    <Expander Header="Details" IsExpanded="False" Background="LightSteelBlue" Foreground="Black">
                        <StackPanel Margin="5,0,0,0">
                            <TextBlock>
                                <Run Text="Parameters: " FontWeight="Bold" />
                                <Run Text="{Binding Parameters, Converter={StaticResource ListToStringConverter}}" />
                                                </TextBlock>
                                                <TextBlock>
                                <Run Text="Return Type: " FontWeight="Bold" />
                                <Run Text="{Binding ReturnType}" />
                                                </TextBlock>
                                                <TextBlock>
                                <Run Text="Return Value: " FontWeight="Bold" />
                                <Run Text="{Binding ReturnValue}" />
                            </TextBlock>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Start: " FontWeight="Bold" />
                                <TextBlock Text="{Binding StartTime}" Margin="2,0,5,0"/>
                                <TextBlock Text="End: " FontWeight="Bold" />
                                <TextBlock Text="{Binding EndTime}" Margin="2,0,5,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Elapsed: " FontWeight="Bold" />
                                <TextBlock Text="{Binding ElapsedTime}" Margin="2,0,5,0"/>
                                <TextBlock Text="Exclusive: " FontWeight="Bold" />
                                <TextBlock Text="{Binding ExclusiveElapsedTime}" Margin="2,0,5,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </Border>
        </HierarchicalDataTemplate>
    </UserControl.Resources>
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="5">
            <TextBox Background="White"
                     Foreground="Black"
                     x:Name="SearchTextBox" 
                     Width="200" Margin="0,0,5,0" 
                     VerticalAlignment="Center" 
                     TextChanged="SearchTextBox_TextChanged" />
            <Button Content="Previous" Click="PreviousButton_Click" VerticalAlignment="Center" />
            <Button Content="Next" Click="NextButton_Click" Margin="5,0,0,0" VerticalAlignment="Center" />
            <Button Content="Clear" Click="ClearButton_Click" Margin="5,0,0,0" VerticalAlignment="Center" />
        </StackPanel>
        <TreeView Background="Black"  x:Name="LogTreeView" Grid.Row="1" Margin="5" />
    </Grid>
</UserControl>